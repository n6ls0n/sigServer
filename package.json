{
  "name": "sig-server",
  "version": "0.1.0",
  "private": true,
  "description": "A WebRTC Signalling Server",
  "author": "Chukwuemeka Nelson Nwauche <cnwauche@gmail.com>",
  "scripts": {
    "start-server": "webpack-dev-server --mode development --open",
    "build-server": "webpack --mode production",
    "ssl-keys": "mkdir -p ssl_certs && openssl req -x509 -out ssl_certs/localhost.crt -keyout ssl_certs/localhost.key -newkey rsa:2048 -nodes -sha256 -days 3650 -subj '/CN=localhost' -extensions EXT -config self-signed.conf"
  },
  "dependencies": {
    "express": "^4.18.3",
    "http-errors": "^2.0",
    "morgan": "^1.10",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/socket.io": "^3.0.2",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "chromedriver": "^122.0.4",
    "css-loader": "^7.1.2",
    "dotenv": "16.4.7",
    "eslint": "^9.16.0",
    "geckodriver": "^3.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.41",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
